@page
@model Football.Pages.TournamentTreeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TournamentTree</title>
    <link href="jquery.bracket.min.css" rel="stylesheet" />
</head>
<body>
<div class="tournamentTree"></div>
<script src="jquery.min.js"></script>
<script src="jquery.bracket.min.js"></script>
<script>

    var teamsList = @Model.Teams;

    var teamPairsList = [];

    function shuffle(a) {
        var j, x, i;
        for (i = a.length - 1; i > 0; i--) {
            j = Math.floor(Math.random() * (i + 1));
            x = a[i];
            a[i] = a[j];
            a[j] = x;
        }
        return a;
    }

    function createPairs() {
        shuffle(teamsList);
        for (var i = 0; i < teamsList.Length - 1; i = i + 2)
        {
            teamPairsList += [teamsList[i], teamsList[i+1]]; 
        }
    }

    var tournamentData = {

        teams : teamPairsList,
        results : [[1,2]]
    }

    $('.tournamentTree').bracket({
        init: tournamentData
    })

</script>
</body>
</html>
